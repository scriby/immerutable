{
  "compilerOptions": {
    "alwaysStrict": true,
    "sourceMap": false,
    "declaration": true,
    "target": "ES5",
    "lib": ["es2015", "es2015.iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "inlineSourceMap": true,
    "outDir": "dist"
  },
  "include": [
    "benchmark/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}